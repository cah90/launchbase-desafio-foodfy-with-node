{% extends "layout.njk" %}

{% block head %}
<title>Recipes - Foodfy</title> 

<link rel="stylesheet" href="/recipes.css">

{% endblock %}

{% block content %}

<section class="cards">

{% for item in items %}

  <div class="card" id="{{item.title}}">
    <div class="card__image-container">
      <img src="{{item.image}}" alt="{{item.title}}">
    </div>

    <div class="card__recipe">
      <p class="card__recipe-name">{{item.title}}</p>
      <p class="card__author">{{item.author}}</p>
    </div>
  </div>

  {% endfor %}

</section>


{% endblock %}

{% block modal %}

<div class="modal-overlay">
  <div class="modal">
    <div class="modal-content">
      <img src="" alt="">
      <p class="modal__recipe-name"></p>
      <p class="modal__author"></p>
      <p class="modal__close">Fechar modal</p>
    </div>
  </div>
</div>

<script src="/scripts.js"></script>

{% endblock %}

